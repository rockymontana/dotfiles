#!/bin/bash
# Author Jonas Erlandsson <jonas.erlandsson@sitedirect.se>
if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root" 1>&2
  exit 1
else
  if [ -z $2 ]; then 
    host="192.168.10.10"
  else
    host=$2
  fi
  echo "Adding $1"
  if [ -z $1 ]; then 
    echo 'usage: addHost <domain> <host> - host is optional and will default to 192.168.10.10'
  else
    echo "${host}   ${1}" >> /etc/hosts
  fi
  exit 0
fi